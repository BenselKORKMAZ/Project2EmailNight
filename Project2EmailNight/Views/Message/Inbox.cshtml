@model List<Project2EmailNight.Entities.Message>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-hover">

        <tr>
            <th>#</th>
            <th>Gonderici</th>
            <th>Konu</th>
            <th>Tarih</th>
            <th>Mesaji Ac</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageId</td>
                <td>@item.SenderEmail</td>
                <td>@item.Subject</td>
                <td>@item.SendDate.ToString("dd/MM/yyyy")</td>
                <td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-warning">Mesaji Ac</a>
                <td><a href="/Message/MessageDelete/@item.MessageId" class="btn btn-danger">Mesaji Sil</a>
            </tr>
        }
    </table>
</div>